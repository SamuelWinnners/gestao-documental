{
  "version": 2,
  "name": "gestao-documental",
  "builds": [
    { 
      "src": "backend/server.js", 
      "use": "@vercel/node",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/health",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/public/$1"
    }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production",
    "DB_HOST": "gondola.proxy.rlwy.net",
    "DB_PORT": "22627",
    "DB_USER": "root", 
    "DB_PASSWORD": "pzaHwDJucmTwZoeLITWxAASqKAGhVEHq",
    "DB_NAME": "railway"
  },
  "github": {
    "autoJobCancelation": false
  }
}